<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- Drawer -->
    <style name="DrawerEntry">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/drawer_item_bg</item>
    </style>
    <style name="DrawerEntry.Selected">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Baggers -->
    <style name="BaggersSessions"/>
    <style name="BaggersSessions.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BaggersSessions.Summary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Filter -->
    <style name="FilterEntry">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="FilterEntry.Selected">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Location Info Window. -->
    <style name="LocationInfoWindow"/>
    <style name="LocationInfoWindow.SmallText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
